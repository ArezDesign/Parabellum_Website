---
const { title, image, id} = Astro.props;
---

<section id={id}>
    <div>
        <img src={image}></img>
        <slot />
    </div>
    <p class="section__title">{title}</p>
</section>

<style>
    .section__title {
        margin:  0 0 0 50px;
        font-weight: 700;
        font-size: clamp(12px, 1.5vw, 24px);
        line-height: 36px;
        text-transform: uppercase;
        writing-mode: vertical-rl;
        text-orientation: sideways;
        text-shadow: 0px 0px 100px #FFFFFF;
    }

    section {
        margin-bottom: 300px;
        width: 48%;
        display: flex;
    }

    img {
        width: 100%;
    }

    div {
        display: flex;
        flex-direction: column;
    }

    @media screen and (max-width: 767px) {
        section {
            margin-bottom: 120px;
            width: 70%;
        }

        .section__title {
            margin:  0 0 0 20px;
        }
    }
</style>