---
const { title, image, id, index, sectionsCount } = Astro.props;
---

<section id={id}>
    <div>
        <img src={image}></img>
        <slot />
    </div>
</section>

<style>
    .section__title {
        margin:  0 0 0 50px;
        font-weight: 700;
        font-size: clamp(12px, 1.5vw, 24px);
        line-height: 36px;
        text-transform: uppercase;
        writing-mode: vertical-rl;
        text-orientation: sideways;
        text-shadow: 0px 0px 100px #FFFFFF;
    }

    section {
        width: 40vw;
        display: flex;
    }

    img {
        width: 100%;
    }

    div {
        display: flex;
        flex-direction: column;
    }

    @media screen and (max-width: 767px) {
        section {
            width: 80%;
            line-height: 18px;
        }

        .section__title {
            margin:  0 0 0 20px;
        }
    }
</style>
