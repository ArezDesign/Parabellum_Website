---
const { question, answer } = Astro.props;

import arrow from '../../public/arrow_faq.svg';
---

<div class="accordion">
    <img src={arrow} alt="arrow" class="faq__arrow">
    <p>{question}</p>
</div>
<div class="panel">
    <p set:html={answer}></p>
</div>

<script>
    let accordion = document.querySelectorAll('.accordion');
    let arr = document.getElementsByClassName('faq__arrow');
    let panel;

    for (let i = 0; i < accordion.length; i++) {
        accordion[i].addEventListener('click', function() {
            this.classList.toggle('active');

            if (panel && panel != this.nextElementSibling) {
                panel.style.maxHeight = null;
                panel.previousElementSibling.classList.toggle('active');
                panel.previousElementSibling.children[0].style.transform = null;
            }

            panel = this.nextElementSibling;

            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
                this.firstElementChild.style.transform = null;
            } else {
                panel.style.maxHeight = panel.scrollHeight + 'px';
                this.firstElementChild.style.transform = 'rotate(90deg)';
            }
        });
    }
</script>

<style>
    .accordion {
        display: flex;
        text-align: left;
        transition: 0.4s;
        cursor: pointer;
        mix-blend-mode: normal;
        opacity: 0.75;
    }

    
    .active, .accordion:hover {
        opacity: 1;
    } 

    .panel {
        padding: 0 18px;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;  
    }

    .panel p {
        font-size: clamp(12px, 1.5vw, 20px);
        line-height: 30px;
        margin-top: 20px;
        margin-left: 8px;
        margin-bottom: 24px;
    }

    .faq__arrow {
        margin-right: 15px;
        transition: all 0.4s;
    }

    .accordion p {
        margin: 0;
        font-weight: 700;
        font-size: clamp(16px, 1.5vw, 24px);
        line-height: 36px;
        text-transform: uppercase;
        text-shadow: 0px 0px 100px #FFFFFF;
    }

    .panel p p {
        margin: 0;
    }

    @media screen and (max-width: 767px) {
        p {
            line-height: 18px;
            font-size: 14px;
        }
    }
</style>