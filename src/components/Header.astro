---
import background from '../../public/background.webm';
import backgroundMobile from '../../public/background.gif';
import parabellumLogo from '../../public/parabellum_logo.svg';
import arrow from '../../public/Arrow.svg';
---

<header>
    <div class="video__mask"></div>

    <div id="header">
        <video autoplay muted loop id="header__video" class="banner">
            <source src={background} type="video/webm">
        </video>
        <img src={parabellumLogo} alt="parabellum logo" class="pb__logo">
        <h1>PARABELLUM</h1>
        <p>counter-strike total conversion mod project</p>
    </div>

    
    <a href="#overview">
        <img src={arrow} alt="down arrow">
    </a>
</header>

<style>
    header {
        height: 100vh;
        padding-top: 50px;
        margin-bottom: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-sizing: border-box;
        width: 100%;
    }

    h1 {
        margin: 80px 0;
        font-weight: 700;
        font-size: clamp(20px, 6.6vw, 128px);
        line-height: clamp(20px, 10vh,190px);
        letter-spacing: 0.5em;
        text-align: center;
        mix-blend-mode: difference;
        z-index: 8;
        margin-right:-0.5em;
        user-select: none;
        max-width: 100%;
    }
    
    p {
        font-size: clamp(11px, 1.8vw, 32px);
        line-height: 47px;
        text-align: center;
        mix-blend-mode: exclusion;
        text-shadow: 0px 0px 100px #FFFFFF;
        opacity: 0.5;
        margin: 0;
        user-select: none;
        padding: 0 10% 0 10%;
    }

    a {
        position: absolute;
        bottom: 24px;
        z-index: 8;
    }

    .banner {
        position: absolute;
        top: -190px;
        z-index: 0;
        mask-image: linear-gradient(180deg, #000000 77.5%, rgba(0, 0, 0, 0) 94.47%);
        -webkit-mask-image: linear-gradient(180deg, #000000 77.5%, rgba(0, 0, 0, 0) 94.47%);
  
    }

    .pb__logo {
        width: clamp(50px, 4.25vw, 82px);
        mix-blend-mode: difference;
        
    }

    #header {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        height: 100vh;
    }

    @media screen and (min-width: 1920px) {
        h1 {
            margin: 160px;
        }
    }

    @media screen and (max-width: 1100px) {
        h1 {
            margin: 68px 0;
            margin-bottom: 0;
        }

        #header__video {
            display: none;
        }

        .banner {
            top: 0px;
        }

        #header {
            background-image: url('/background.gif');
            background-repeat: no-repeat;
            background-size: contain;
            bakground-position: 50% 20%;
            background-clip: content-box;
        }
    }
</style>
