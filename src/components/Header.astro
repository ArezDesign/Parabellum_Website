---
import background from '../../public/background.webm';
import parabellumLogo from '../../public/parabellum_logo.svg';
import arrow from '../../public/Arrow.svg';
---

<header>
    <div class="video__mask"></div>
    <video autoplay muted loop id="header__video">
        <source src={background} type="video/webm">
    </video>
    <img src={parabellumLogo} alt="parabellum logo" class="pb__logo">
    <h1>PARABELLUM</h1>
    <p>cs:go total conversion mod project</p>
    <a href="#overview">
        <img src={arrow} alt="down arrow">
    </a>
</header>

<style>
    header {
        height: 100vh;
        padding-top: 50px;
        margin-bottom: 300px;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-sizing: border-box;
    }

    h1 {
        margin: 100px 0;
        font-weight: 700;
        font-size: clamp(28px, 6.8vw, 128px);
        /* font-size: 6.25em; */
        line-height: 190px;
        letter-spacing: 0.5em;
        text-align: center;
        mix-blend-mode: difference;
        z-index: 8;
        margin-right:-0.5em;
    }
    
    p {
        font-size: clamp(11px, 1.8vw, 32px);
        line-height: 47px;
        text-align: center;
        mix-blend-mode: exclusion;
        text-shadow: 0px 0px 100px #FFFFFF;
        opacity: 0.5;
        margin: 0;
    }

    a {
        position: absolute;
        bottom: 8px;
        z-index: 8;
    }

    video {
        position: absolute;
        top: -190px;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        mask-image: linear-gradient(180deg, #000000 77.5%, rgba(0, 0, 0, 0) 94.47%);
        -webkit-mask-image: linear-gradient(180deg, #000000 77.5%, rgba(0, 0, 0, 0) 94.47%);
    }

    .pb__logo {
        width: clamp(50px, 4.25vw, 82px);
        mix-blend-mode: difference;
        
    }

    @media screen and (max-width: 1100px) {
        h1 {
            margin: 68px 0;
        }
    }
</style>
